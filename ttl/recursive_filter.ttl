@prefix lv2:  <http://lv2plug.in/ns/lv2core#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix doap: <http://usefulinc.com/ns/doap#>.
@prefix foaf: <http://xmlns.com/foaf/0.1/>.

<http://github.com/klem23/noise_factory/recursive_filter>
  a lv2:Plugin;
  doap:maintainer [
    foaf:name "Clement Guedez";
    foaf:mbox <mailto:klem.dev@gmail.com>;
  ];
  doap:name "Recursive Filter";
  doap:homepage <http://github.com/klem23/noise_factory>;
  doap:license <http://usefulinc.com/doap/licenses/gpl>;

  lv2:port [
    a lv2:InputPort, lv2:AudioPort;
    lv2:datatype lv2:float;
    lv2:index 0;
    lv2:symbol "input";
    lv2:name "Input";
  ],
  
  [
    a lv2:OutputPort, lv2:AudioPort;
    lv2:datatype lv2:float;
    lv2:index 1;
    lv2:symbol "output";
    lv2:name "Output";
  ],

  [
    a lv2:ControlPort, lv2:InputPort;
    lv2:datatype lv2:float;
    lv2:index 2;
    lv2:symbol "band_type";
    lv2:name "Band Type";
    lv2:minimum 0;
    lv2:maximum 1;
    lv2:default 0;
  ],

  [
    a lv2:ControlPort, lv2:InputPort;
    lv2:datatype lv2:float;
    lv2:index 3;
    lv2:symbol "filter_type";
    lv2:name "Filter Type";
    lv2:minimum 0;
    lv2:maximum 3;
    lv2:default 0;
  ],

  [
    a lv2:ControlPort, lv2:InputPort;
    lv2:datatype lv2:float;
    lv2:index 4;
    lv2:symbol "order";
    lv2:name "Degree/Order";
    lv2:minimum 2;
    lv2:maximum 24;
    lv2:default 2;
  ],


  [
    a lv2:ControlPort, lv2:InputPort;
    lv2:datatype lv2:float;
    lv2:index 5;
    lv2:symbol "fc";
    lv2:name "Cutoff Frequency";
    lv2:minimum 25;
    lv2:maximum 5000;
    lv2:default 1500;
  ],
  [
    a lv2:ControlPort, lv2:InputPort;
    lv2:datatype lv2:float;
    lv2:index 6;
    lv2:symbol "rp";
    lv2:name "Ripple Band";
    lv2:minimum 0;
    lv2:maximum 30;
    lv2:default 0.5;
  ].

