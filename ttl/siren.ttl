@prefix lv2:  <http://lv2plug.in/ns/lv2core#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix doap: <http://usefulinc.com/ns/doap#>.
@prefix ev: <http://lv2plug.in/ns/ext/event#>.
@prefix foaf: <http://xmlns.com/foaf/0.1/>.
@prefix pg: <http://lv2plug.in/ns/ext/port-groups#>.
@prefix atom: <http://lv2plug.in/ns/ext/atom#> .


<http://github.com/klem23/noise_factory/siren>
  a lv2:Plugin;
  doap:maintainer [
    foaf:name "Clement Guedez";
    foaf:mbox <mailto:klem.dev@gmail.com>;
  ];
  doap:name "DUB MERMAID";
  doap:homepage <http://github.com/klem23/noise_factory>;
  doap:license <http://usefulinc.com/doap/licenses/gpl>;

  lv2:port [
    a lv2:InputPort, atom:AtomPort ;
    atom:bufferType atom:Sequence ;
    atom:supports <http://lv2plug.in/ns/ext/midi#MidiEvent> ;
    lv2:index 0;
    lv2:symbol "midi_in";
    lv2:name "MIDI in";
  ],
  
  [
    a lv2:OutputPort, lv2:AudioPort;
    lv2:datatype lv2:float;
    lv2:index 1;
    lv2:symbol "output_left";
    lv2:name "Output Left";
  ],

  [
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 2;
    lv2:symbol "kmod";
    lv2:name "Keyboard Mode";
    lv2:minimum 0;
    lv2:maximum 2;
    lv2:default 0;
    lv2:portProperty lv2:integer;
  ],

  [
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 3;
    lv2:symbol "kpitch";
    lv2:name "Use KeyBoard Pitch";
    lv2:minimum 0;
    lv2:maximum 1;
    lv2:default 0;
    lv2:portProperty lv2:toggled ;
  ],

  [
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 4;
    lv2:symbol "osc_wave";
    lv2:name "VCO Wave Select";
    lv2:minimum 0;
    lv2:maximum 4;
    lv2:default 0;
    lv2:portProperty lv2:integer;
  ],

  [
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 5;
    lv2:symbol "pitch";
    lv2:name "Pitch";
    lv2:minimum 90;
    lv2:maximum 3000;
    lv2:default 500;
  ],

  [
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 6;
    lv2:symbol "lfo_wave";
    lv2:name "LFO Wave Select";
    lv2:minimum 0;
    lv2:maximum 4;
    lv2:default 0;
    lv2:portProperty lv2:integer;
  ],

  [
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 7;
    lv2:symbol "lfo_freq";
    lv2:name "LFO Frequency";
    lv2:minimum 0.1;
    lv2:maximum 20;
    lv2:default 1.0;
  ],

  [ 
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 8;
    lv2:symbol "lfo_amt";
    lv2:name "LFO Depth";
    lv2:minimum 0;
    lv2:maximum 1;
    lv2:default 0.5;
  ],

  [
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 9;
    lv2:symbol "decay";
    lv2:name "Decay time";
    lv2:minimum 0;
    lv2:maximum 10;
    lv2:default 0;
  ],

  [
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 10;
    lv2:symbol "vol";
    lv2:name "Volume";
    lv2:minimum 0;
    lv2:maximum 1;
    lv2:default 0.8;
  ].
